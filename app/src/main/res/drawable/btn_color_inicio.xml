<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/gris_claro" />
            <corners android:radius="10dp" />
            <stroke android:color="@android:color/black" android:width="4dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="0" android:startColor="@color/black" android:centerColor="@color/gris_acero" android:endColor="@color/black" />
            <corners android:radius="10dp" />
            <stroke android:color="@android:color/black" android:width="4dp" />
        </shape>
    </item>

</selector>
