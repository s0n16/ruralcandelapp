<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">




    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="@dimen/cardview_compat_inset_shadow">




        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/logo"
            android:layout_marginTop="75dp"
            />

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="Correo electr칩nico"
            android:textColor="@color/verde_oliva"
            android:background="@color/gris_claro"
            android:padding="16dp"
            android:layout_marginVertical="20dp"

            />
        <EditText
            android:id="@+id/txtContrasena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="Contrase침a"
            android:textColor="@color/verde_oliva"
            android:background="@color/gris_claro"
            android:padding="16dp"
            android:layout_marginVertical="20dp"
            />





        <Button
            android:id="@+id/btnIniciarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="20dp"
            android:text="Iniciar sesi칩n"
            android:textColor="@color/white"
            android:background="@drawable/btn_color"


            />



        <Button
            android:id="@+id/btnRegistrarse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="20dp"
            android:text="Registrarse"
            style="attr/materialButtonOutlinedStyle"
            app:strokeColor="@color/verde_oliva"
            app:cornerRadius="50dp"
            android:background="@drawable/btn_color"
            />
        <Button
            android:id="@+id/btnSinSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="20dp"
            android:text="Sin sesi칩n"
            android:background="@drawable/btn_color"


            />





    </LinearLayout>
    </ScrollView>